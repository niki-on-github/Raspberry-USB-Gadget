[Unit]
Description=Create USB-Gadget configuration
After=systemd-modules-load.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/usr/local/sbin/raspi2go.sh

[Install]
WantedBy=sysinit.target
